mixin single-product
    section.section-single-product
        .container
            .single-product
                .single-product__top
                    .single-product__image
                        .single-product__compare
                            +icons('#ic_compare')
                            span В сравнение
                        .single-product__gallery
                            .product-images
                                .product-images__large
                                    .splide(data-slider="single")
                                        .splide__track
                                            .splide__list
                                                .splide__slide: +picture('/img/products/single/0')
                                                .splide__slide: +picture('/img/products/single/1')
                                                .splide__slide: +picture('/img/products/single/2')
                                                .splide__slide: +picture('/img/products/single/3')
                                                .splide__slide: +picture('/img/products/single/4')
                                .product-images__thumb
                                    .product-images__slider
                                        .splide(data-slider="thumb")
                                            .splide__track
                                                .splide__list
                                                    .splide__slide: +picture('/img/products/single/0')
                                                    .splide__slide: +picture('/img/products/single/1')
                                                    .splide__slide: +picture('/img/products/single/2')
                                                    .splide__slide: +picture('/img/products/single/3')
                                                    .splide__slide: +picture('/img/products/single/4')
                                    
                    .single-product__details
                        .single-product__config
                            .product-config
                                .product-config__instock
                                    +icons('#iс_stock')
                                    span В наличии
                                .product-config__props
                                    .product-config__item
                                        .product-config__label Материал корпуса
                                        .product-config__val
                                            +radio('Нержавеющая сталь', 'mat', true)
                                            +radio('Порошковая окраска', 'mat')
                                    .product-config__item
                                        .product-config__label Внутренние размеры
                                        .product-config__val
                                            +radio('400x400', 'size', true)
                                            +radio('500x500', 'size')
                                            +radio('600x600', 'size')
                                            +radio('750x750', 'size')
                                            +radio('Индивидуальный размер', 'size')
                                            

                                .product-config__submit
                                    .product-config__btn: button.btn Запросить расчёт
                                    .product-config__note С учётом доставки до вашего объекта.
                        .single-product__info
                            .product-info
                                .product-info__label Доставка
                                .product-info__value
                                    strong В любую точку СНГ
                                    p транспортной компанией либо самовывоз со склада транспортной компании.

                                .product-info__label Гарантия
                                .product-info__value
                                    p — 1 год

                                .product-info__label Сопутствующие услуги
                                .product-info__value
                                    .product-info__similar
                                        ul
                                            li: span Монтаж
                                            li: span Другая услуга

                .single-product__description
                    .single-product__nav
                        ul
                            li
                                +icons('#ic_char')
                                span Характеристики
                            li
                                +icons('#ic_edit')
                                span Описание товара
