include  ../../components/breadcrumb/breadcrumb.pug
include  ../minicard/minicard.pug 
include  ../../components/pagination/pagination.pug
include  parts/filter.pug

mixin catalog-category
    section.section-catalog-category
        .container
            .catalog-category
               
                .catalog-category__content
                    .catalog-category__aside(style="display:block")
                        .current-category
                            .current-category__label Категории
                            .current-category__parent
                                a(href='#')
                                    +icons('#ic_arrow-prev', 24)
                                    span Компьютеры
                            .current-category__link Ноутбуки (124)

                        .category-filter(data-filter-container="catalog")
                            .category-filter__head
                                .category-filter__head-title Фильтры
                                .category-filter__head-close: span.icon-cross(data-filter="open" data-elem="catalog")

                            .category-filter__wrp
                                form(action='#' method='POST')
                                    .category-filter__props
                                         
                                        .category-filter__item: +prop-checkbox({
                                            title: 'Производитель',
                                            checkbox: [
                                                'HP',
                                                'ASUS',
                                                'Lenovo',
                                                'MSI',
                                                'DELL',
                                                'Acer',
                                                'Apple',
                                                'Fujitsu-Siemens',
                                                'HP',
                                                'ASUS',
                                                'Lenovo',
                                                'MSI',
                                                'DELL',
                                                'Acer',
                                                'Apple',
                                                'Fujitsu-Siemens',
                                            ]
                                        })

                                        .category-filter__item: +prop-checkbox({
                                            title: 'Модельный ряд',
                                            checkbox: [
                                                'Dolby Atmos',
                                                'Harman Kardon',
                                                'Dolby Digital',
                                                'Google Pixel 8',
                                                'Google Pixel 8 Pro',
                                                'Google Pixel Fold',
                                                'Nothing Phone (2)',
                                                'OnePlus 11',
                                                'Poco M5',
                                                'Poco M5s',
                                                'Poco X5',
                                                'Poco X5 Pro',
                                                'Poco X6',
                                                'Poco X6 Pro',
                                                'Redmi Note 12',
                                                'Redmi Note 12 Pro+',
                                                'Samsung Galaxy A15',
                                                'Samsung Galaxy A34',
                                                'Samsung Galaxy A54',
                                                'Samsung Galaxy S23',
                                                'Samsung Galaxy S23 FE',
                                                'Samsung Galaxy S23 Ultra',
                                                'Samsung Galaxy S23+',
                                                'Poco X5 Pro',
                                                'Poco X6',
                                                'Poco X6 Pro',
                                                'Redmi Note 12',
                                                'Redmi Note 12 Pro+',
                                                'Samsung Galaxy A15',
                                                'Samsung Galaxy A34',
                                                'Samsung Galaxy A54',
                                            ]
                                        })

 

 
                                        .category-filter__item: +prop-checkbox-single('Bluetooth')
                                        .category-filter__item: +prop-color({
                                            title: 'Цвет',
                                            colors: [
                                                {hex: '#000000', name: 'Черный'}, 
                                                {hex: '#808080', name: 'Серый'}, 
                                                {hex: '#FF0000', name: 'Красный'}, 
                                                {hex: '#FF0000', name: 'Красный'}, 
                                                {hex: '#008000', name: 'Зеленый'}, 
                                                {hex: '#0000FF', name: 'Синий'}, 
                                                {hex: '#C0C0C0', name: 'Серый'}, 
                                                {hex: '#ffffff', name: 'Белый'}, 
                                                {hex: '#FFA500', name: 'Оранжевый'}, 
                                                {hex: '#42AAFF', name: 'Голубой'}, 
                                                {hex: '#42AAFF', name: 'Голубой'}, 
                                                {hex: '#42AAFF', name: 'Голубой'}, 
                                            ]
                                        })
                                        .category-filter__item: +prop-radio({
                                            title: 'Рейтинг магазина',
                                            radio: [
                                                'Любой',
                                                'Высокий: 4.5+',
                                                'Хороший: 4+',
                                                'Средний: 3.5+',
                                            ],
                                        })

                                        .category-filter__item: +prop-checkbox({
                                            title: 'Скидки и акции ',
                                            checkbox: [
                                                'Скидки',
                                                'Промокоды',
                                                'Подарки за покупки',
                                                'Больше за ту же цену',
                                            ]
                                        })

                                        .category-filter__item: +prop-checkbox({
                                            title: 'Магазины',
                                            checkbox: [
                                                'PCPuls.ru',
                                                'AMD.ru',
                                                'intel.cpm',
                                                'kst.by',
                                            ]
                                        })

                                        .category-filter__item: +prop-checkbox({
                                            title: 'Способ доставки',
                                            checkbox: [
                                                'Курьером',
                                                'Самовывоз',
                                                'Транспортная компания',
                                                
                                            ]
                                        })

                                        .category-filter__item: +prop-checkbox({
                                            title: 'Способ оплаты',
                                            checkbox: [
                                                'Онлайн',
                                                'Курьеру',
                                            ]
                                        })

                                        .category-filter__item: +prop-checkbox({
                                            title: 'Состояние товара',
                                            checkbox: [
                                                'Новый',
                                                'Немного БУ',
                                                'Восстановленный',
                                            ]
                                        })
                                    .category-filter__submit
                                        .category-filter__send(data-filter="submit")
                                            button.btn
                                                span Посмотреть
                                                small 328 предложений 
                                        .category-filter__clear(data-filter="clear")
                                            span.icon-cross 
                                            small Очистить <span>все фильтры</span>
                                    
                                 

                    .catalog-category__main 
                        .catalog-category__top
                            .catalog-category__help
                                a(href='#'): button.btn Помощь с подбором
                             

                        .catalog-category__products

                            .catalog-products(data-catalog="container")
                                each item in sliderProduct
                                    .catalog-products__item: +minicard(item)

                            .catalog-pagination
                                .catalog-pagination__more
                                    button
                                        +icons('#ic_more', 14)
                                        span Показать ещё
                                .catalog-pagination__page
                                    +pagination()



