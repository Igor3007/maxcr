include parts.pug


mixin compare-windows
    .compare-box
        +compare-table-top()

        .compare-table 
            .compare-table__wrp.dragscroll
                table
                    tbody.product-table__tbody
                        tr
                            each item in compare_product.windows
                                td
                                    +compare-product(item)
                    tbody.product-table__scroll
                        tr
                            td
                                .table-scroller 
                                    .table-scroller__wrp 
                                        .table-scroller__content

                    tbody.product-table__group
                        +table-group(9, 'Основные характеристики')
                        

                    tbody.product-table__prop
                        +table-prop([
                            'Нет данных',
                            '2022 г',
                        ], 'Дата выхода на рынок')

                    tbody.product-table__prop
                        +table-prop([
                            'портативные',
                            'геймерские',
                        ], 'Назначение')

                    tbody.product-table__group
                        +table-group(9, 'Дополнительные характеристики')

                    tbody.product-table__prop
                        +table-prop([
                            'да',
                            'да',
                        ], 'Пыле-, влаго-, ударопрочность')
                    tbody.product-table__prop

                        +table-prop([
                             'пластик',
                            'пластик',
                        ], 'Материал')
                    tbody.product-table__prop

                        +table-prop([
                             'наушники с микрофоном',
                            'наушники без микрофоном',
                        ], 'Тип')
                    tbody.product-table__prop

                        +table-prop([
                             'внутриканальные 	',
                            'мониторные (охватывающие)',
                        ], 'Конструкция')
                    tbody.product-table__prop

                        +table-prop([
                             'закрытое',
                            'закрытое',
                        ], 'Акустическое оформление')
                    tbody.product-table__prop

                        +table-prop([
                             'да',
                            'да',
                        ], 'Беспроводной интерфейс')
                    tbody.product-table__prop

                        +table-prop([
                           'Bluetooth ',
                            'радио/Bluetooth ',
                        ],  'Тип беспроводного интерфейса')
                    tbody.product-table__prop

                        +table-prop([
                            'полностью беспроводные',
                            'съёмный аудиокабель',
                        ], 'Тип беспроводных наушников')