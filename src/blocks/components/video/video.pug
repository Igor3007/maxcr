mixin video (data)
  .video(data-id=""+data.link+"")
    .video__preview(data-video="preview")
      picture
        img(src=data.preview+'.jpg' loading="lazy")
    .video__iframe
    .video__action
      if data.title
        .video__title= data.title
      .video__button(data-video="play")
        +icons('#ic_play', 70)
     

mixin video-review (data)
  .video(data-id=""+data.link+"")
    .video__preview
      +picture(data.preview)
    .video__action
      if data.title
        .video__title= data.title
      .video__button
        +icons('#ic_play', 52)
        span Watch the video review
